extends layout

block content
	script(src="/js/table.js")
	style.
		section.main {
			display: flex;
			flex-wrap: wrap;

			justify-content: center;
			align-items: center;
		}
		div.table {
			width: 200px;
			height: 100px;
			border: 1px solid gray;
			margin: 10px;

			text-align: center;
			line-height: 100px;

			background-color: skyblue;
			opacity: 0.4;
			color:black;
			font-weight: bold;
			font-size: 20px;

			cursor: pointer;
		}
		div.table:hover {
			box-shadow: 5px 5px 5px lightgray;
		}
		div.order_yes {
			background-color: pink;
		}

	each table, index in TABLES
		if(table.order_count > 0)
			div.table.order_yes(data-table_id= table.id) !{table.table_name}
				span (!{table.order_count})
		else
			div.table(data-table_id= table.id) !{table.table_name}